        "water-chlorophyll",
        "water-spm",
        "detections-ship",
        "detections-plane"
    ],
    "enabled": true,
    "swatch": {
        "color": "#189C54",
        "name": "Dark Green"
    },
    "legend": {
        "type": "gradient",
        "min": "< -1 ppm",
        "max": "> 1 ppm",
        "stops": [
            "#3A88BD",
            "#C9E0ED",
            "#E4EEF3",
            "#FDDCC9",
            "#DD7059"
