    "time_unit": "day",
    "s3_location": "xco2-diff",
    "source": {
        "type": "raster",
        "tiles": [
            "https://h4ymwpefng.execute-api.us-east-1.amazonaws.com/v1/{z}/{x}/{y}@1x?url=s3://covid-eo-data/xco2-diff/xco2_15day_diff.{date}.tif&resampling_method=bilinear&bidx=1&rescale=-0.000001%2C0.000001&color_map=rdbu_r"
        ]
    },
    "exclusive_with": [
        "no2",
        "co2",
        "gibs-population",
        "car-count",
        "nightlights-viirs",
        "nightlights-hd",
